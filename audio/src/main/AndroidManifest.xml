<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.audio">
    <!-- 存储卡读写 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <!-- 录音 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- 获取网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 互联网 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:preserveLegacyExternalStorage="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SliderActivity"
            android:theme="@style/MaterialTheme" />
        <activity android:name=".AudioManagerActivity" />
        <activity android:name=".VolumeDialogActivity" />
        <activity android:name=".AudioCommonActivity" />
        <activity android:name=".AudioRawActivity" />
        <activity android:name=".AudioControllerActivity" />
        <activity android:name=".RingToneActivity" />
        <activity android:name=".SoundPoolActivity" />
        <activity android:name=".WavRecordActivity" />
        <activity android:name=".Mp3RecordActivity" />
        <activity
            android:name=".StoryViewActivity"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".StoryListenActivity"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".StoryTakeActivity"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".StoryEditActivity"
            android:theme="@style/AppCompatTheme" />
    </application>

</manifest>