<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.face">
    <!-- 震动 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- 存储卡读写 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <!-- 相机 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 互联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- WiFi权限 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 获取网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GenerateQrcodeActivity" />
        <activity
            android:name=".ScanQrcodeActivity"
            android:theme="@style/AppCompatTheme" />
        <activity android:name=".ScanResultActivity" />
        <activity android:name=".VerifyCodeActivity" />
        <activity android:name=".DetectSystemActivity" />
        <activity android:name=".DetectOpencvActivity" />
        <activity android:name=".DetectRealtimeActivity" />
        <activity android:name=".CompareImageActivity" />
        <activity android:name=".GuessAgeActivity" />
        <activity
            android:name=".WisdomEyeActivity"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".PersonEditActivity"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".PersonDetailActivity"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".PersonCutActivity"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".PersonVerifyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppCompatTheme" />
    </application>

</manifest>